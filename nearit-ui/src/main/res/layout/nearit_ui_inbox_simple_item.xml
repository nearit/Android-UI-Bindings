<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nearit_ui_simple_notification_item_height"
    android:background="@android:color/black"
    android:layout_marginTop="@dimen/nearit_ui_inbox_list_top_margin1"
    android:paddingBottom="@dimen/nearit_ui_simple_notification_item_padding_bottom"
    android:paddingLeft="@dimen/nearit_ui_simple_notification_item_padding_left_right"
    android:paddingRight="@dimen/nearit_ui_simple_notification_item_padding_left_right"
    android:paddingTop="@dimen/nearit_ui_simple_notification_item_padding_top">

    <TextView
        android:id="@+id/timestampTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"

        android:text="il mio orario"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="12sp"
        />

    <TextView
        android:id="@+id/notificationTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/nearit_ui_simple_notification_label_top_margin"

        android:text="La mia simple notifica, Ã¨ un testo abbastanza lungo"
        android:textColor="@android:color/white"
        android:textSize="20sp"

        android:layout_below="@id/timestampTextView" />

</RelativeLayout>