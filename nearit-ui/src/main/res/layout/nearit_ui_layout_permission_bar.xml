<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bar_relative_layout"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/nearit_ui_permission_bar_height"
    android:gravity="bottom"
    android:padding="@dimen/nearit_ui_permission_bar_main_padding">

    <ImageView
        android:id="@+id/face"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp" />


    <com.nearit.ui_bindings.permissions.views.PermissionBarButton
        android:id="@+id/ok_button"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="6dp"
        android:layout_marginRight="6dp" />

    <TextView
        android:id="@+id/alert_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/nearit_ui_permission_bar_text_left_right_margin"
        android:layout_marginRight="@dimen/nearit_ui_permission_bar_text_left_right_margin"
        android:layout_toStartOf="@id/ok_button"
        android:layout_toLeftOf="@id/ok_button"
        android:layout_toEndOf="@id/face"
        android:layout_toRightOf="@id/face"
        android:ellipsize="end"
        android:maxLines="2"
        android:textAppearance="@style/NearItUIPermissionBarAlertMessageTextAppearance" />

</RelativeLayout>