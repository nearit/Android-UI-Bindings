<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--  COLORS  -->
    <color name="nearit_ui_notification_text_color">@color/nearit_ui_black_text</color>
    <color name="nearit_ui_notification_background_unread">@color/nearit_ui_real_white</color>
    <color name="nearit_ui_notification_card_background_read">#efefef</color>
    <color name="nearit_ui_notification_card_text_unread_color">@color/nearit_ui_notification_history_blue</color>
    <color name="nearit_ui_notification_card_text_read_color">@color/nearit_ui_grey_text</color>
    <color name="nearit_ui_notification_background_color">@color/nearit_ui_background_color</color>


    <!--  DIMENSIONS  -->
    <dimen name="nearit_ui_history_padding_left_right">10dp</dimen>
    <dimen name="nearit_ui_history_item_height">200dp</dimen>
    <dimen name="nearit_ui_history_item_padding_bottom">10dp</dimen>
    <dimen name="nearit_ui_history_item_margin_left_right">12dp</dimen>
    <dimen name="nearit_ui_history_item_padding_top">15dp</dimen>
    <dimen name="nearit_ui_history_timestamp_top_margin">15dp</dimen>
    <dimen name="nearit_ui_history_label_top_margin">8dp</dimen>
    <dimen name="nearit_ui_history_list_top_margin1">10dp</dimen>
    <dimen name="nearit_ui_history_padding_rl">20dp</dimen>
    <dimen name="nearit_ui_history_card_elevation">5dp</dimen>
    <!-- Simple notification -->
    <dimen name="nearit_ui_simple_notification_item_height">@dimen/nearit_ui_history_item_height</dimen>
    <dimen name="nearit_ui_simple_notification_item_padding_bottom">@dimen/nearit_ui_history_item_padding_bottom</dimen>
    <dimen name="nearit_ui_simple_notification_item_margin_left_right">@dimen/nearit_ui_history_item_margin_left_right</dimen>
    <dimen name="nearit_ui_simple_notification_item_padding_top">@dimen/nearit_ui_history_item_padding_top</dimen>
    <dimen name="nearit_ui_simple_notification_timestamp_top_margin">@dimen/nearit_ui_history_timestamp_top_margin</dimen>
    <dimen name="nearit_ui_simple_notification_label_top_margin">@dimen/nearit_ui_history_label_top_margin</dimen>
    <dimen name="nearit_ui_simple_notification_item_padding_rl">@dimen/nearit_ui_history_padding_rl</dimen>
    <!-- Content notification -->
    <dimen name="nearit_ui_content_notification_item_height">@dimen/nearit_ui_history_item_height</dimen>
    <dimen name="nearit_ui_content_notification_item_padding_bottom">@dimen/nearit_ui_history_item_padding_bottom</dimen>
    <dimen name="nearit_ui_content_notification_item_margin_left_right">@dimen/nearit_ui_history_item_margin_left_right</dimen>
    <dimen name="nearit_ui_content_notification_item_padding_top">@dimen/nearit_ui_history_item_padding_top</dimen>
    <dimen name="nearit_ui_content_notification_timestamp_top_margin">@dimen/nearit_ui_history_timestamp_top_margin</dimen>
    <dimen name="nearit_ui_content_notification_label_top_margin">@dimen/nearit_ui_history_label_top_margin</dimen>
    <dimen name="nearit_ui_content_notification_item_padding_rl">@dimen/nearit_ui_history_padding_rl</dimen>
    <!-- Feedback notification -->
    <dimen name="nearit_ui_feedback_notification_item_height">@dimen/nearit_ui_history_item_height</dimen>
    <dimen name="nearit_ui_feedback_notification_item_padding_bottom">@dimen/nearit_ui_history_item_padding_bottom</dimen>
    <dimen name="nearit_ui_feedback_notification_item_margin_left_right">@dimen/nearit_ui_history_item_margin_left_right</dimen>
    <dimen name="nearit_ui_feedback_notification_item_padding_top">@dimen/nearit_ui_history_item_padding_top</dimen>
    <dimen name="nearit_ui_feedback_notification_timestamp_top_margin">@dimen/nearit_ui_history_timestamp_top_margin</dimen>
    <dimen name="nearit_ui_feedback_notification_label_top_margin">@dimen/nearit_ui_history_label_top_margin</dimen>
    <dimen name="nearit_ui_feedback_notification_item_padding_rl">@dimen/nearit_ui_history_padding_rl</dimen>
    <!-- Coupon -->
    <dimen name="nearit_ui_coupon_notification_item_height">@dimen/nearit_ui_history_item_height</dimen>
    <dimen name="nearit_ui_coupon_notification_item_padding_bottom">@dimen/nearit_ui_history_item_padding_bottom</dimen>
    <dimen name="nearit_ui_coupon_notification_item_margin_left_right">@dimen/nearit_ui_history_item_margin_left_right</dimen>
    <dimen name="nearit_ui_coupon_notification_item_padding_top">@dimen/nearit_ui_history_item_padding_top</dimen>
    <dimen name="nearit_ui_coupon_notification_timestamp_top_margin">@dimen/nearit_ui_history_timestamp_top_margin</dimen>
    <dimen name="nearit_ui_coupon_notification_label_top_margin">@dimen/nearit_ui_history_label_top_margin</dimen>
    <dimen name="nearit_ui_coupon_notification_item_padding_rl">@dimen/nearit_ui_history_padding_rl</dimen>
    <!-- CustomJson -->
    <dimen name="nearit_ui_customjson_item_height">@dimen/nearit_ui_history_item_height</dimen>
    <dimen name="nearit_ui_customjson_item_padding_bottom">@dimen/nearit_ui_history_item_padding_bottom</dimen>
    <dimen name="nearit_ui_customjson_item_margin_left_right">@dimen/nearit_ui_history_item_margin_left_right</dimen>
    <dimen name="nearit_ui_customjson_item_padding_top">@dimen/nearit_ui_history_item_padding_top</dimen>
    <dimen name="nearit_ui_customjson_timestamp_top_margin">@dimen/nearit_ui_history_timestamp_top_margin</dimen>
    <dimen name="nearit_ui_customjson_label_top_margin">@dimen/nearit_ui_history_label_top_margin</dimen>
    <dimen name="nearit_ui_customjson_item_padding_rl">@dimen/nearit_ui_history_padding_rl</dimen>
    <!--  Text sizes  -->
    <dimen name="nearit_ui_history_notification_size">16sp</dimen>
    <dimen name="nearit_ui_history_timestamp_size">12sp</dimen>


    <!--  STRINGS  -->
    <string name="nearit_ui_history_empty_list_text">No messages available</string>
    <string name="nearit_ui_history_content_button_label">See more</string>
    <string name="nearit_ui_history_coupon_button_label">Open</string>
    <string name="nearit_ui_history_feedback_button_label">Open</string>
    <string name="nearit_ui_history_error_message">We could not get your notifications. Please try again later.</string>


    <!--  STYLES  -->
    <style name="NearITUINotificationHistoryActivityAppearance" parent="NearITUIFullScreenActivityAppearance" />
    <style name="NearITUIEmptyNotificationHistoryTextAppearance" parent="NearItUIEmptyListTextAppearance" />
    <style name="NearItUINotificationTimestampTextAppearance" parent="NearItUIGlobalTheme.ItalicText">
        <item name="android:textColor">@color/nearit_ui_notification_card_text_read_color</item>
        <item name="android:textSize">@dimen/nearit_ui_history_timestamp_size</item>
    </style>
    <style name="NearItUINotificationTextAppearance" parent="NearItUIGlobalTheme.RegularText">
        <item name="android:textColor">@color/nearit_ui_notification_text_color</item>
        <item name="android:textSize">@dimen/nearit_ui_history_notification_size</item>
    </style>
    <style name="NearItUINotificationButtonTextAppearance">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/nearit_ui_notification_card_background_read</item>
        <item name="android:textSize">12sp</item>
    </style>


    <!--  STYLEABLES  -->
    <declare-styleable name="MessageState">
        <attr name="state_message_unread" format="boolean"/>
    </declare-styleable>
    <declare-styleable name="NearItUINotificationHistoryButtonView">
        <attr name="text" format="string" />
    </declare-styleable>
</resources>