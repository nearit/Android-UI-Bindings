<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--  Fullscreen activity appearance    -->
    <style name="NearITUIFullScreenActivityAppearance" parent="Theme.AppCompat" />

    <!--  Dialogs appearance  -->
    <style name="NearItUIDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!--  Buttons Text  -->
    <style name="NearItUIButtonTextAppearance">
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/nearit_ui_button_text_size</item>
        <item name="fontFamily">@raw/asap_bold</item>
    </style>

    <!--  Dismiss buttons text -->
    <style name="NearITUIDismissButtonTextAppearance">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/nearit_ui_dismiss_button_text_size</item>
        <item name="fontFamily">@raw/asap_italic</item>
    </style>

    <!--  Empty list text -->
    <style name="NearItUIEmptyListTextAppearance">
        <item name="android:textColor">@color/nearit_ui_coupon_list_empty_list_text_color</item>
        <item name="android:textSize">@dimen/nearit_ui_coupon_list_empty_list_text_size</item>
        <item name="fontFamily">@raw/asap_bolditalic</item>
    </style>
</resources>