    <style name="NearItUIWarningDialogRetryButtonTextAppearance" parent="NearItUIButtonTextAppearance">
        <item name="android:textColor">@color/nearit_ui_warning_dialog_button_text_color</item>
    </style>

    <!--  Dismiss buttons text -->
    <style name="NearITUIDismissButtonTextAppearance">
        <item name="textAllCaps">false</item>
        <item name="textStyle">italic</item>
        <item name="android:textSize">@dimen/nearit_ui_dismiss_button_text_size</item>
    </style>

    <style name="NearItUIFeedbackDismissButtonTextAppearance" parent="NearITUIDismissButtonTextAppearance">
