<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--  Dialogs appearance  -->
    <style name="NearItUIDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="NearItUIPermissionsDialog" parent="NearItUIDialog" />

    <style name="NearItUIWarningDialog" parent="NearItUIDialog" />

    <style name="NearItUIFeedbackDialog" parent="NearItUIDialog" />

    <style name="NearItUIContentDetailDialog" parent="NearItUIDialog" />

    <style name="NearItUICouponDetailDialog" parent="NearItUIDialog">
        <item name="android:windowBackground">@color/nearit_ui_coupon_detail_activity_container_background_color</item>
    </style>



    <!--  Text appearances  -->
    <!--  Buttons Text  -->
    <style name="NearItUIButtonTextAppearance">
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/nearit_ui_button_text_size</item>
    </style>

    <style name="NearItUIPermissionButtonTextAppearance" parent="NearItUIButtonTextAppearance">
        <item name="android:textColor">@drawable/nearit_ui_selector_permission_button_text_color</item>
    </style>

    <style name="NearItUIPermissionBarButtonTextAppearance" parent="NearItUIButtonTextAppearance">
        <item name="android:textColor">@drawable/nearit_ui_selector_permission_bar_button_text_color</item>
    </style>

    <style name="NearItUIFeedbackSendButtonTextAppearance" parent="NearItUIButtonTextAppearance">
        <item name="android:textColor">@drawable/nearit_ui_selector_feedback_button_text_color</item>
    </style>

    <style name="NearItUIContentCTAButtonTextAppearance" parent="NearItUIButtonTextAppearance">
        <item name="android:textColor">@drawable/nearit_ui_selector_cta_button_text_color</item>
