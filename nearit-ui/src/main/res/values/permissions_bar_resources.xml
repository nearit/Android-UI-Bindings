<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--  COLORS  -->
    <color name="nearit_ui_permission_bar_background_color">@color/nearit_ui_black</color>
    <color name="nearit_ui_permission_bar_alert_text_color">@color/nearit_ui_real_white</color>
    <color name="nearit_ui_permission_bar_button_background_color">@color/nearit_ui_white</color>
    <color name="nearit_ui_permission_bar_button_pressed_background_color">@color/nearit_ui_white_50</color>
    <color name="nearit_ui_permission_bar_button_text_color">@color/nearit_ui_black</color>
    <color name="nearit_ui_permission_bar_button_pressed_text_color">@color/nearit_ui_black</color>


    <!--  DIMENSIONS  -->
    <dimen name="nearit_ui_permission_bar_height">50dp</dimen>
    <dimen name="nearit_ui_permission_bar_main_padding">9dp</dimen>
    <dimen name="nearit_ui_permission_bar_margin1">5dp</dimen>
    <dimen name="nearit_ui_permission_bar_margin2">31dp</dimen>
    <dimen name="nearit_ui_permission_bar_button_height">30dp</dimen>
    <dimen name="nearit_ui_permission_bar_button_width">50dp</dimen>
    <dimen name="nearit_ui_permission_bar_button_left_right_padding">5dp</dimen>
    <dimen name="nearit_ui_permission_bar_button_top_bottom_padding">4dp</dimen>
    <!--    Text sizes     -->
    <dimen name="nearit_ui_permission_bar_alert_text_size">13sp</dimen>


    <!--  STRINGS  -->
    <string name="nearit_ui_permission_bar_alert_text">Provide\nall the missing authorizations</string>
    <string name="nearit_ui_permission_bar_button_text">OK!</string>


    <!--  STYLES  -->
    <style name="NearItUIPermissionBarAlertMessageTextAppearance">
        <item name="android:textColor">@color/nearit_ui_permission_bar_alert_text_color</item>
        <item name="android:textSize">@dimen/nearit_ui_permission_bar_alert_text_size</item>
        <item name="fontFamily">@raw/asap_medium</item>
    </style>


    <!--  STYLEABLES  -->
    <declare-styleable name="NearItUIPermissionButtonView">
        <attr name="buttonText" format="string" />
        <attr name="iconRes" format="reference" />
    </declare-styleable>
    <declare-styleable name="NearItUIBar">
        <attr name="barButtonText" format="string" />
        <attr name="barAlertText" format="string" />
        <attr name="barBluetoothIcon" format="reference" />
        <attr name="barLocationIcon" format="reference" />
        <attr name="barNotificationsIcon" format="reference" />
        <attr name="noBeacon" format="boolean" />
        <attr name="nonBlockingBeacon" format="boolean" />
        <attr name="invisibleMode" format="boolean" />
        <attr name="dialogHeader" format="reference" />
        <attr name="noDialogHeader" format="boolean" />
        <attr name="autostartRadar" format="boolean" />
    </declare-styleable>
</resources>