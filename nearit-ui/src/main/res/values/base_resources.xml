<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--  COLORS  -->
    <color name="nearit_ui_error_color">#E54D4C</color>
    <color name="nearit_ui_error_color_50">#80E54D4C</color>
    <color name="nearit_ui_black">#333333</color>
    <color name="nearit_ui_real_black">#000000</color>
    <color name="nearit_ui_black_50">#7f333333</color>
    <color name="nearit_ui_white">#E1E1E1</color>
    <color name="nearit_ui_white_two">#E1E1E1</color>
    <color name="nearit_ui_white_50">#80F2F2F2</color>
    <color name="nearit_ui_real_white">#FFFFFF</color>
    <color name="nearit_ui_warm_grey">#777777</color>
    <color name="nearit_ui_grey">#CACACA</color>
    <color name="nearit_ui_warm_grey_50">#80777777</color>
    <color name="nearit_ui_black_35">#59333333</color>
    <color name="nearit_ui_transparent">#00000000</color>
    <color name="nearit_ui_star_yellow">#F8D71C</color>
    <color name="nearit_ui_notification_history_blue">#519fd0</color>
    <color name="nearit_ui_sad_color">#FF4025</color>
    <color name="nearit_ui_worried_color">#FF9500</color>
    <!--    Lists background colors     -->
    <color name="nearit_ui_background_color">@color/nearit_ui_white_two</color>
    <!--    Buttons colors  -->
    <color name="nearit_ui_selected_button_background_color">@color/nearit_ui_black</color>
    <color name="nearit_ui_selected_button_text_color">@color/nearit_ui_real_white</color>


    <!--  DIMENSIONS  -->
    <dimen name="nearit_ui_button_height">45dp</dimen>
    <dimen name="nearit_ui_button_text_size">15sp</dimen>
    <dimen name="nearit_ui_dismiss_button_text_size">15sp</dimen>


    <!--  STRINGS  -->
    <string name="nearit_ui_app_name" translatable="false">ui_bindings</string>
    <string name="nearit_ui_coupon_date_pretty_format">MM-dd-yyyy</string>


    <!--  STYLES  -->
    <!--  Fullscreen activity appearance    -->
    <style name="NearITUIFullScreenActivityAppearance" parent="Theme.AppCompat" />
    <!--  Dialogs appearance  -->
    <style name="NearItUIDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <!--  Buttons Text  -->
    <style name="NearItUIButtonTextAppearance" parent="NearItUIGlobalTheme.BoldText">
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/nearit_ui_button_text_size</item>
    </style>
    <!--  Dismiss buttons text -->
    <style name="NearITUIDismissButtonTextAppearance" parent="NearItUIGlobalTheme.ItalicText">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/nearit_ui_dismiss_button_text_size</item>
    </style>
    <!--  Empty list text -->
    <style name="NearItUIEmptyListTextAppearance" parent="NearItUIGlobalTheme.BoldItalicText">
        <item name="android:textColor">@color/nearit_ui_coupon_list_empty_list_text_color</item>
        <item name="android:textSize">@dimen/nearit_ui_coupon_list_empty_list_text_size</item>
    </style>


    <!--  STYLEABLES  -->
    <declare-styleable name="NearItUIButtonView">
        <attr name="genericButtonText" format="string" />
    </declare-styleable>


    <!--  VALUES  -->
    <integer name="nearit_ui_feedback_comment_box_min_lines">3</integer>
    <integer name="nearit_ui_feedback_comment_box_lines">3</integer>
</resources>