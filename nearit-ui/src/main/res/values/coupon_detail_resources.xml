    <string name="nearit_ui_coupon_expired_text">Expired coupon</string>
    <string name="nearit_ui_coupon_inactive_text">Inactive coupon</string>
    <string name="nearit_ui_coupon_redeemed_text">Already used coupon</string>
    <string name="nearit_ui_coupon_validity_label_valid">Validity: </string>
