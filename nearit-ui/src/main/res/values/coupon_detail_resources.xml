        <item name="android:textSize">@dimen/nearit_ui_coupon_detail_value_text_size</item>
        <item name="android:textColor">@color/nearit_ui_coupon_detail_value_color</item>
    </style>
    <style name="NearItUICouponDetailDescriptionTextAppearance" parent="NearItUIGlobalTheme.RegularText">
        <item name="android:textSize">@dimen/nearit_ui_coupon_detail_description_text_size</item>
