    <!--    Text sizes     -->
    <dimen name="nearit_ui_coupon_detail_title_text_size">16sp</dimen>
    <dimen name="nearit_ui_coupon_detail_serial_text_size">20sp</dimen>
    <dimen name="nearit_ui_coupon_detail_value_text_size">20sp</dimen>
