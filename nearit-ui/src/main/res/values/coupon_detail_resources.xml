    <string name="nearit_ui_qr_code_error_message">Cannot render QR code</string>


    <!--  STYLES  -->
    <style name="NearItUICouponDetailDialog" parent="NearItUIDialog">
        <item name="android:windowBackground">@color/nearit_ui_coupon_detail_activity_container_background_color</item>
    </style>
    <style name="NearItUICouponDetailValidityTextAppearance" parent="NearItUIGlobalTheme.BoldItalicText">
