<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--  COLORS  -->
    <color name="nearit_ui_coupon_detail_title_color">@color/nearit_ui_black_text</color>
    <color name="nearit_ui_coupon_detail_value_color">@color/nearit_ui_black_text</color>
    <color name="nearit_ui_coupon_detail_description_color">@color/nearit_ui_grey_text</color>
    <color name="nearit_ui_coupon_detail_validity_period_color">@color/nearit_ui_grey_text</color>
