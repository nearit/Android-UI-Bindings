<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--  COLORS  -->
    <color name="nearit_ui_permissions_activity_background_color">@color/nearit_ui_real_white</color>
    <color name="nearit_ui_permission_not_given_button_background_color">@color/nearit_ui_black</color>
    <color name="nearit_ui_permission_not_given_button_text_color">@color/nearit_ui_white_text</color>
    <color name="nearit_ui_permission_button_selected_background_color">#f2f2f2</color>
    <color name="nearit_ui_permission_button_selected_text_color">@color/nearit_ui_black_text</color>
    <color name="nearit_ui_permissions_text_color">@color/nearit_ui_grey_text</color>
    <color name="nearit_ui_permissions_close_text_color">@color/nearit_ui_grey_text</color>
    <color name="nearit_ui_permissions_close_pressed_text_color">@color/nearit_ui_grey_pressed_text</color>


    <!--  DIMENSIONS  -->
    <dimen name="nearit_ui_permissions_activity_margin1">36dp</dimen>
    <dimen name="nearit_ui_permissions_activity_margin2">34dp</dimen>
    <dimen name="nearit_ui_permissions_activity_margin3">10dp</dimen>
    <dimen name="nearit_ui_permissions_activity_margin4">16dp</dimen>
    <dimen name="nearit_ui_permissions_activity_margin5">22dp</dimen>
    <dimen name="nearit_ui_permissions_activity_padding">25dp</dimen>
    <dimen name="nearit_ui_permissions_activity_icon_margin">17dp</dimen>
    <!--  Text sizes  -->
    <dimen name="nearit_ui_permissions_text_size">15sp</dimen>
    <dimen name="nearit_ui_permissions_button_label_size">12sp</dimen>


    <!--  STRINGS  -->
    <string name="nearit_ui_permissions_explanation_text">Do you want to receive personalized contents? Allow us to know your location</string>
    <string name="nearit_ui_close_permissions_text">Proceed</string>
    <string name="nearit_ui_close_permissions_text_default">Not now</string>
    <string name="nearit_ui_bluetooth">Turn on bluetooth</string>
    <string name="nearit_ui_location">Turn on location</string>
    <string name="nearit_ui_notification">Turn on notifications</string>
    <string name="nearit_ui_go_to_settings">Settings</string>
    <string name="nearit_ui_cancel_dialog">Cancel</string>
    <string name="nearit_ui_flight_mode_detected_title">Flight mode detected</string>
    <string name="nearit_ui_flight_mode_detected_message">Please, turn flight mode off</string>
    <string name="nearit_ui_go_to_settings_location_title">Missing location permission</string>
    <string name="nearit_ui_go_to_settings_location_message">Please, change your selection under \"Permissions\" section</string>
    <string name="nearit_ui_go_to_settings_notification_title">Notifications are disabled</string>
    <string name="nearit_ui_go_to_settings_notification_message">Please, change your selection and enable them</string>
    <string name="nearit_ui_location_button_sad_text">permission denied</string>
    <string name="nearit_ui_location_button_worried_text">turn it on</string>
    <string name="nearit_ui_location_button_worried_when_in_use_text">only in use</string>
    <string name="nearit_ui_bluetooth_button_on_text">Bluetooth on</string>
    <string name="nearit_ui_bluetooth_button_off_text">Bluetooth off</string>
    <string name="nearit_ui_location_button_on_text">Location on</string>
    <string name="nearit_ui_location_button_off_text">Location is off</string>
    <string name="nearit_ui_location_button_text">Location</string>


    <!--  STYLES  -->
    <style name="NearItUIPermissionsDialog" parent="NearItUIDialog" />
    <style name="NearItUIPermissionButtonTextAppearance" parent="NearItUIButtonTextAppearance">
        <item name="android:textColor">@drawable/nearit_ui_selector_permission_button_text_color</item>
    </style>
    <style name="NearItUIPermissionButtonLabelAppearance" parent="NearItUIGlobalTheme.RegularText">
        <item name="android:textSize">@dimen/nearit_ui_permissions_button_label_size</item>
    </style>
    <style name="NearItUIPermissionsDismissButtonTextAppearance" parent="NearITUIDismissButtonTextAppearance">
        <item name="android:textColor">@drawable/nearit_ui_selector_permission_close_text_color</item>
    </style>
    <style name="NearItUIPermissionsExplanationTextAppearance" parent="NearItUIGlobalTheme.RegularText">
        <item name="android:textSize">@dimen/nearit_ui_permissions_text_size</item>
        <item name="android:textColor">@color/nearit_ui_permissions_text_color</item>
    </style>


    <!--  STYLEABLE  -->
    <declare-styleable name="NearItUIPermissionButtonView">
        <attr name="buttonText" format="string" />
        <attr name="permissionIcon" format="reference" />
        <attr name="sadFaceRes" format="reference" />
        <attr name="worriedFaceRes" format="reference" />
        <attr name="happyFaceRes" format="reference" />
    </declare-styleable>
</resources>